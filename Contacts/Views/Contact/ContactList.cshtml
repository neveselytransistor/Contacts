@model List<Contact>
@{
    ViewBag.Title = "ContactList";
}

<h3>Contacts</h3>
<a asp-action="CreateContact">Create new contact</a>
<table class="table">  
    <thead>  
    <tr>  
        <th>  
            @Html.DisplayName("Name")  
        </th>  
        <th>  
            @Html.DisplayName("Phone")  
        </th>  
        <th>Actions</th>  
    </tr>  
    </thead>  
    <tbody>  
    @foreach (var item in Model)  
    {  
        <tr>  
            <td>  
                @Html.DisplayFor(modelItem => item.Name)  
            </td>  
            <td>  
                @Html.DisplayFor(modelItem => item.Phone)  
            </td>  
            <td>  
                <a asp-action="EditContact" asp-route-id="@item.Id">Edit</a> |  
                <a asp-action="Delete" asp-controller="Contact" onclick="return confirm('Are you sure you want to delete this item?');" asp-route-id ="@item.Id">Delete</a>  
            </td>  
        </tr>  
    }  
    </tbody>  
</table>